<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="Playwright Suite" parallel="tests" thread-count="4">

    <test name="Chromium Test">
        <parameter name="browserName" value="chromium"/>
        <classes>
            <class name="configurations.PlaywrightUI"/>
        </classes>
    </test>

    <test name="Firefox Test">
        <parameter name="browserName" value="firefox"/>
        <classes>
            <class name="configurations.PlaywrightUI"/>
        </classes>
    </test>

    <test name="WebKit Test">
        <parameter name="browserName" value="webkit"/>
        <classes>
            <class name="configurations.PlaywrightUI"/>
        </classes>
    </test>

    <test name="Edge Test">
        <parameter name="browserName" value="edge"/>
        <classes>
            <class name="configurations.PlaywrightUI"/>
        </classes>
    </test>

</suite>
